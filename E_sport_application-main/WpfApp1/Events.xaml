<UserControl x:Class="E_sport_application.Events"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:E_sport_application"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800" Loaded="UserControl_Loaded">

    <!-- I have replaced the copy-pasted XAML from your file with a working CRUD layout -->

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Data Grid -->
        <DataGrid x:Name="dgEvents" Grid.Column="0" SelectionChanged="DgEvents_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding EventID}" Width="50"/>
                <DataGridTextColumn Header="Event Name" Binding="{Binding EventName}" Width="*"/>
                <DataGridTextColumn Header="Location" Binding="{Binding EventLocation}" Width="*"/>
                <DataGridTextColumn Header="Date" Binding="{Binding EventDate, StringFormat='dd/MM/yyyy'}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Form -->
        <Border Grid.Column="1" Background="White" Margin="10,0,0,0" Padding="10" CornerRadius="5">
            <StackPanel x:Name="spForm">
                <TextBlock Text="Manage Events" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                <Label Content="Event ID (Read-only)"/>
                <TextBox x:Name="txtEventId" IsReadOnly="True" Background="#EEEEEE"/>

                <Label Content="Event Name"/>
                <TextBox x:Name="txtEventName"/>

                <Label Content="Event Location"/>
                <TextBox x:Name="txtEventLocation"/>

                <Label Content="Event Date"/>
                <DatePicker x:Name="dpEventDate" Margin="5,0,5,5"/>

                <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                    <Button x:Name="btnAddNew" Content="Add New" Click="BtnAddNew_Click" Width="80"/>
                    <Button x:Name="btnUpdate" Content="Update" Click="BtnUpdate_Click" Width="80" IsEnabled="False"/>
                    <Button x:Name="btnClear" Content="Clear" Click="BtnClear_Click" Width="80" Background="#FF8A8A8A"/>
                </StackPanel>
                <Button x:Name="btnDelete" Content="Delete Selected" Click="BtnDelete_Click" Background="#FFD32F2F" Margin="0,10,0,0" IsEnabled="False"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>