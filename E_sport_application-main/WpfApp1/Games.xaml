<UserControl x:Class="E_sport_application.Games_info"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:E_sport_application"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d" 
        d:DesignHeight="600" d:DesignWidth="800" Loaded="UserControl_Loaded">

    <!-- Your barebone file was empty. I have created the required CRUD UI. -->

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Data Grid -->
        <DataGrid x:Name="dgGames" Grid.Column="0" SelectionChanged="DgGames_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding GameID}" Width="50"/>
                <DataGridTextColumn Header="Game Name" Binding="{Binding GameName}" Width="*"/>
                <DataGridTextColumn Header="Game Type" Binding="{Binding GameType}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Form -->
        <Border Grid.Column="1" Background="White" Margin="10,0,0,0" Padding="10" CornerRadius="5">
            <StackPanel x:Name="spForm">
                <TextBlock Text="Manage Games" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                <Label Content="Game ID (Read-only)"/>
                <TextBox x:Name="txtGameId" IsReadOnly="True" Background="#EEEEEE"/>

                <Label Content="Game Name"/>
                <TextBox x:Name="txtGameName"/>

                <Label Content="Game Type"/>
                <ComboBox x:Name="cmbGameType">
                    <system:String>Team</system:String>
                    <system:String>Solo</system:String>
                </ComboBox>

                <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                    <Button x:Name="btnAddNew" Content="Add New" Click="BtnAddNew_Click" Width="80"/>
                    <Button x:Name="btnUpdate" Content="Update" Click="BtnUpdate_Click" Width="80" IsEnabled="False"/>
                    <Button x:Name="btnClear" Content="Clear" Click="BtnClear_Click" Width="80" Background="#FF8A8A8A"/>
                </StackPanel>
                <Button x:Name="btnDelete" Content="Delete Selected" Click="BtnDelete_Click" Background="#FFD32F2F" Margin="0,10,0,0" IsEnabled="False"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>